pipeline {
    agent any
environment {
     mvnHome = tool name: 'maven', type: 'maven'
     mvnCMD = "${mvnHome}/bin/mvn"
     }
   stages {
     dir('kanban-app'){
        stage('Install Dependencies') {
            steps {
                    sh '${mvnCMD} clean package'
                    }
                    }
       stage('Unit Tests') {
    steps {
                    sh '${mvnCMD} test'
   }
                    }
                    }
                    }
                    }
 
